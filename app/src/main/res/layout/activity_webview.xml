<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/content">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/bai" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/drawable_selector_touming_borderless"
            android:src="@drawable/icon_back_1" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/drawable_selector_touming_borderless"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ProgressBar
        android:id="@+id/progress_horizontal"
        android:layout_below="@id/title_layout"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:max="100"
        android:progressDrawable="@drawable/drawable_layer_webview_loading_line" />

    <WebView
        android:id="@+id/webView"
        android:layout_below="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"   >
    </WebView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/adwrapper1"
        android:layout_below="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/ad_close"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/close"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/adwrapper2"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/ad_close1"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/close"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
</RelativeLayout>